#include <stdio.h>


int main()
{
    int eingabe;
    int i,j,k;
    scanf("%d",&eingabe);

    //Anfang
    for(i=0; i< eingabe; i++){
        printf("*");
    }
    printf("\n");

    //Diagonale
    for(i=1; i<eingabe-1; i++){
        j = eingabe - i;
        for(k=1; k < j; k++){
            printf(" ");
        }
        j--;
        printf("*\n");
    }


    //Ende
    for(i=0; i< eingabe; i++){
        printf("*");
    }
    printf("\n");


    return 0;
}
