#include <stdio.h>


int main()
{
    int i=1;
    int eingabe;
    scanf("%d",&eingabe);

    if(eingabe <= 1){
        printf("Error!");
    }

    while(eingabe>1){

    if(eingabe%2 == 0){
        eingabe /= 2;
    } else if (eingabe%2 != 0){
        eingabe = 3 * eingabe +1;
        }

        i++;
    }

    printf("Iterationen: %d",i);

    return 0;
}
